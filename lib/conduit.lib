	class InsertionConduit {
		private $myCon = null;
		private $cols = "";
		private $tbl = "";
		private $cond = "";
		private $vals = "";
		function __construct($con, $sel) {
			$this->myCon = $con;
			$len = count($sel) - 1;
			
			for ($x = 0; $x < $len; $x++)
				$this->cols .= $sel[$x] . ", ";

			$this->cols .= $sel[$x];
		}

		function into($tablename) {
			$this->tbl = $tablename;
			return $this;
		}

		function values($str)
		{

			$len = count($str) - 1;
			
			for ($x = 0; $x < $len; $x++)
				$this->vals .= $str[$x] . ", ";

			$this->vals .= $str[$x];

			return $this;
		}

		function commit() {
			$sql = "INSERT INTO ".$this->tbl."(".$this->cols.") VALUES (".$this->vals.")";
			mysqli_query($this->myCon,$sql);
			$this->myCon->commit();
			return $this;
		}
	}

	class UpdateConduit {
		private $myCon = null;
		function __construct($con) {
			$this->myCon = $con;
		}
	}

	class DeletionConduit {
		private $myCon = null;
		private $tbl = "";
		private $cnd = "";
		function __construct($con) {
			$this->myCon = $con;
		}

		function from($table) {
			$this->tbl = $table;
			return $this;
		}

		function where($cond) {
			$this->cnd = " WHERE ".$cond;
			return $this;
		}

		function commit() {
			$sql = "DELETE FROM ".$this->tbl.$this->cnd;
			mysqli_query($this->myCon,$sql);
			$this->myCon->commit();
			return $this;
		}

	}

